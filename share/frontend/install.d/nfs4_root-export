#!/bin/bash

case $1 in
    install)
        # The fstab and the export entries will be created during the 
        # configuration stage
        continue
        ;;

    uninstall)
        # Delete all kestrel's entries from the nfs export and the fstab
        sed -ri "/[^#]*\/kestrel(\/|[[:space:]])/d" /etc/exports
        sed -ri "/${NFS4_ROOT//\//\\\/}\/kestrel/d" /etc/fstab
        
        #sed -ri "/Autogenerated by kestrel_reconfigure/d" /etc/exports
        #sed -ri "/Autogenerated by kestrel_reconfigure/d" /etc/fstab
        
        /etc/init.d/nfs-kernel-server restart &>/dev/null
        ;;
esac
